<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".VerifyOtpFragment">

    <in.aabhasjindal.otptextview.OtpTextView
        android:id="@+id/otp_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:bar_active_color="@color/button_color2"
        app:height="50dp"
        app:layout_constraintStart_toStartOf="@+id/txt_otp"
        app:layout_constraintTop_toBottomOf="@+id/txt_otp"
        app:length="6"
        app:otp_box_background="@drawable/background_family_item"
        app:otp_box_background_active="@drawable/background_family_item_selected"
        app:width="45dp" />

</androidx.constraintlayout.widget.ConstraintLayout>